<!DOCTYPE html>
<html lang="en">
<head>
    @if (@ViewData["Title"] != null)
    {
        <title>@Settings.SiteName - @ViewData["Title"]</title>
    }
    else
    {
        <title>@Settings.SiteName</title>
    }
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @await RenderSectionAsync("HeadScripts", required: false)
</head>
<body>

<div class="container py-3">
    <main>
        @RenderBody()
    </main>

    <footer class="pt-4 pt-md-5">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - <a asp-controller="Home" asp-action="Index">@Settings.SiteName</a>
        </div>
    </footer>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
@await RenderSectionAsync("BottomBodyScripts", required: false)
</body>
</html>
